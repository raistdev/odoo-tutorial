<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_property_offer_form_view" model="ir.ui.view">
        <field name="name">estate.property.offer.form.view</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="price"/>
                    <field name="partner_id"/>
                    <field name="status"/>
                    <field name="date_deadline"/>
                    <field name="validity"/>
                </group>
            </form>
        </field>
    </record>
    <record id="estate_property_offer_list_view" model="ir.ui.view">
        <field name="name">estate.property.offer.list.view</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <button name="action_accept" type="object" title="accept" icon="fa-check"/>
                <button name="action_refuse" type="object" title="refuse" icon="oi-close"/>
                <field name="status"/>
            </tree>
        </field>
    </record>
    <record id="estate_property_offer_model_action" model="ir.actions.act_window">
        <field name="name">Property Offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('property_type_id', '=', active_id)]</field>
        <field name="context">{'property_type_id': active_id}</field>
    </record>
</odoo>
